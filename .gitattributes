# Force LF line endings for all text files
* text=auto eol=lf

# Rust source files
*.rs text eol=lf
*.toml text eol=lf

# JavaScript/TypeScript/Svelte
*.js text eol=lf
*.ts text eol=lf
*.svelte text eol=lf
*.json text eol=lf
*.css text eol=lf
*.html text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Windows batch files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
