{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rustatio",
  "version": "0.2.0",
  "identifier": "com.rustatio",
  "build": {
    "frontendDist": "../ui/dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": "v1Compatible",
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon_32.png",
      "icons/icon_128.png",
      "icons/icon_256.png",
      "icons/icon_512.png",
      "icons/icon.png"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": []
      },
      "rpm": {
        "depends": []
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/takitsu21/rustatio/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDgxMkYzQTg0RDJCOUMxQ0UKUldUT3diblNoRG92Z2RBVnhHS0NjbVpNMXZCMGUvZ0JKelBrR1lMVVl0dlFlRG90TFp4M3oxcTMK"
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Rustatio - Modern BitTorrent Ratio Faker",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:app:allow-app-show",
            "core:app:allow-app-hide",
            "dialog:default",
            "updater:default",
            "updater:allow-check",
            "updater:allow-download-and-install",
            "process:allow-restart"
          ]
        }
      ]
    }
  }
}
